<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"  
    android:id="@+id/fanmain"  >

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
         />

    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="FAN"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
         />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="54dp"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:paddingRight="@dimen/activity_horizontal_margin" >

          <EditText
              android:id="@+id/editfan1"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/TB11"
              android:layout_toLeftOf="@+id/TB11"
              android:ems="10"
              android:inputType="textMultiLine"
              android:text="Bedroom fan" />

          <ToggleButton
              android:id="@+id/TB11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="60dp"
              android:onClick="onPressfan1"
              android:text="ToggleButton" />
          
      </RelativeLayout>
      <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
         />

      <SeekBar
          android:id="@+id/seekBar11"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:max="3"
          android:paddingLeft="10dp"
          android:layout_gravity="center" />"

<Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >
        
        <ToggleButton
            android:id="@+id/TB12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="68dp"
            android:text="ToggleButton"
            android:onClick="onfan2"/>

        <EditText
            android:id="@+id/editfan2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TB12"
            android:layout_toLeftOf="@+id/TB12"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Hall fan" />

    </RelativeLayout>

     <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
         />
<!--  
     <SeekBar
         android:id="@+id/seekBar12"
         android:layout_width="238dp"
         android:layout_height="wrap_content"
         android:max="3"
         android:layout_gravity="center" />
-->
</LinearLayout>